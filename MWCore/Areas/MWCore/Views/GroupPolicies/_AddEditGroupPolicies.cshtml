@model MWCore.Areas.MWCore.Models.MWCoreModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    <h4 class="modal-title" id="myModalLabel">
        @if (Model.oGroupPolicies.ID > 0)
        {
            <text> Edit New Group Policy</text>

        }
        else
        {
            <text>Add New Group Policy </text>

        }
    </h4>
</div>


@using (Ajax.BeginForm("SaveGroupPolicies", "GroupPolicies", new AjaxOptions { UpdateTargetId = "divGroupPolicies", OnBegin = "PreSave", OnSuccess = "unloadModal('Group Policy')" }, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(m => m.oGroupPolicies.ID)
    <div class="modal-body">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="inputEmail3" style="width:90px;">Group Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.oGroupPolicies.GroupName, new { @class = "form-control", @placeholder = "Group Name" })
                @Html.ValidationMessageFor(m => m.oGroupPolicies.GroupName, "", new { @style = "color:orange;" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" id="btnSave" class="btn btn-info"><i class="fa fa-save"></i> Save</button>
    </div>
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

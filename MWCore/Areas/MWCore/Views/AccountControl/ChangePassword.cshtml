@model MWCore.Areas.MWCore.Models.MWCoreModel
@{
    ViewBag.Title = "Change Password";
}

<script src="@Url.Content("~/Scripts/jquery-3.6.0.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
<div id="divChangePassword">

    <form class="form-horizontal form-material" method="post" id="ChangePasswordform" action="@Url.Action("ChangePassword","AccountControl")">
        @Html.HiddenFor(x => x.oChangePassword.UserID)
        <div class="form-group ">
            <div class="col-xs-12">
                @Html.PasswordFor(m => m.oChangePassword.OldPassword, new { @class = "form-control", @placeholder = "Old Password", @required = "required" })
            </div>
        </div>
        <div class="form-group ">
            <div class="col-xs-12">
                @Html.PasswordFor(m => m.oChangePassword.NewPassword, new { @class = "form-control", @placeholder = "New Password", @required = "required", @id = "Password" })
            </div>
        </div>
        <div class="form-group ">
            <div class="col-xs-12">
                @Html.PasswordFor(m => m.oChangePassword.RepeatNewPassword, new { @class = "form-control", @placeholder = "Confirm New Password", @required = "required", @id = "Password2" })


            </div>
        </div>

        <div class="form-group text-center m-t-20">
            <div class="col-xs-12">
                <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Change Password</button>
            </div>
        </div>
        <div style="text-align: center;"><span style="color:orange">@ViewBag.ChangePasswordMessage</span></div>

    </form>
</div>


<script type="text/javascript">
    window.onload = function () {
        document.getElementById("Password").onchange = validatePassword;
        document.getElementById("Password2").onchange = validatePassword;
    }
    function validatePassword() {
        var pass2 = document.getElementById("Password2").value;
        var pass1 = document.getElementById("Password").value;
        if (pass1 != pass2)
            document.getElementById("Password2").setCustomValidity("The password and confirmation password do not match.");
        else
            document.getElementById("Password2").setCustomValidity('');
    }
</script>
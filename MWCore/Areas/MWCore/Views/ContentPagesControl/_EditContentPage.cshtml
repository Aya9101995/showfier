@model MWCore.Areas.MWCore.Models.MWCoreModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    <h4 class="modal-title" id="myModalLabel">
        Edit Content Page
    </h4>
</div>


@using (Ajax.BeginForm("SaveContentPage", "ContentPages", new AjaxOptions { UpdateTargetId = "divContentPages", OnBegin = "PreSave", OnSuccess = "unloadModal('Content')" }, new { @class = "form-horizontal" }))
{
    <div class="modal-body">
        @Html.HiddenFor(m => m.oContentPage_Loc.PageID)
        <div class="form-group">
            <label class="col-sm-2 control-label" for="inputEmail3" style="width:90px;">Page Title</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.oContentPage_Loc.PageTitle, new { @class = "form-control", @placeholder = "Page Title" })
                @Html.ValidationMessageFor(m => m.oContentPage_Loc.PageTitle, "", new { @style = "color:orange;" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="inputEmail3" style="width:90px;">Page Title</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.oContentPage_Loc.PageDetails, new { @id = "tbPageDetails", @name = "tbPageDetails", @class = "form-control", @placeholder = "Page Title" })
                @Html.ValidationMessageFor(m => m.oContentPage_Loc.PageTitle, "", new { @style = "color:orange;" })
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="submit" id="btnSave" class="btn btn-info"><i class="fa fa-save"></i> Save Changes</button>
    </div>
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/assets/ckeditor/ckeditor.js"></script>
<script>
    var FileBrowseUploadURL = "@Url.Action("UploadImage", "DashboardControl")";
    CKEDITOR.replace('tbPageDetails', {
        imageUploadURL:FileBrowseUploadURL
    });
    $(document).ready(function () {
        $('.modal-dialog').css("width", "80%");
    });
</script>
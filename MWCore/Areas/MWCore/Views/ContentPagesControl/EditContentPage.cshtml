@using (Ajax.BeginForm("SaveContentPage", "ContentPages", new AjaxOptions { UpdateTargetId = "divContentPages", OnSuccess = "unloadModal" }, new { @class = "form-horizontal" }))
{
    <div class="modal-body">
        @Html.HiddenFor(m => m.oContentPage_Loc.PageID)
        <div class="form-group">
            <label class="col-sm-2 control-label" for="inputEmail3" style="width:90px;">Page Title</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.oContentPage_Loc.PageTitle, new { @class = "form-control", @placeholder = "Page Title", @maxlength = "50",@disabled="disabled" })
                @Html.ValidationMessageFor(m => m.oContentPage_Loc.PageTitle, "", new { @style = "color:orange;" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="inputEmail3" style="width:90px;">Page Title</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.oContentPage_Loc.PageDetails, new { @id = "tbPageDetails", @name = "tbPageDetails", @class = "form-control", @placeholder = "Page Title", @style = "height:500px;" })
                @Html.ValidationMessageFor(m => m.oContentPage_Loc.PageTitle, "", new { @style = "color:orange;" })
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="submit" id="btnSave" class="btn btn-info"><i class="fa fa-save"></i> Save Changes</button>
    </div>
}

@model MWCore.Areas.MWCore.Models.MWCoreModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    <h4 class="modal-title" id="myModalLabel">
        @if (Model.oBlock.BlockID > 0)
        {
            <text> Edit Block</text>

        }
        else
        {
            <text>Add New Block</text>

        }
    </h4>
</div>

@using (Ajax.BeginForm("SaveBlock", "GlobalizationControl", new AjaxOptions { UpdateTargetId = "divBlocks", OnBegin = "PreSave", OnSuccess = "unloadModal('Block')" }, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(m => m.oBlock.BlockID)
    @Html.HiddenFor(m => m.oBlock.AreaID)
    <div class="modal-body">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="inputEmail3" style="width:90px;">Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.oBlock.BlockName, new { @class = "form-control", @placeholder = "Block Name" })
                @Html.ValidationMessageFor(m => m.oBlock.BlockName, "", new { @style = "color:orange;" })
            </div>
        </div>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="inputEmail3" style="width:90px;">Status</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.oBlock.Status, Model.lstStatus, new { @class = "form-control", @placeholder = "Sort Order" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" id="btnSave" class="btn btn-info"><i class="fa fa-save"></i> Save</button>
    </div>
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
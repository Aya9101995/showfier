@model MWCore.Areas.MWCore.Models.MWCoreModel

<div style="text-align:center;">
    <a class="btn btn-info modal-link" href="@Url.Action("AddEditDriver", "DriversControl")"><i class="fa fa-plus"></i> Add New Driver</a>
</div>
<br />
<div class="col-lg-12">
    <div class="table-responsive">
        <table class="table table-users table-bordered table-hover DataTable">
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Name</th>
                    <th>Civil ID</th>
                    <th>Gender</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.lstDrivers)
                {
                    <tr>
                        <td>
                            @item.EmployeeID
                        </td>
                        <td>
                            @item.FullName
                        </td>
                        <td>
                            @item.CivilID
                        </td>
                        <td>
                            @item.Gender
                        </td>


                        <td>
                            <a class="btn btn-info modal-link" href="@Url.Action("AddEditDriver", "DriversControl", new { @DriverID = item.DriverID})"><i class="fa fa-paste"></i> Edit</a>
                            @using (Ajax.BeginForm("DeleteDriver", new { @controller = "DriversControl", @DriverID = item.DriverID }, new AjaxOptions { UpdateTargetId = "divDrivers", OnSuccess = "unloadModal('Driver')" }, new { @style = "display: inline-block;" }))
                            {
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure that you want to delete it?')"><i class="fa fa-close"></i>&nbsp; Delete</button>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@model MWCore.Areas.MWCore.Models.MWCoreModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    <h4 class="modal-title" id="myModalLabel">
        @if (Model.oCarModels.CarModelID > 0)
        {
            <text> Edit Car Model</text>

        }
        else
        {
            <text>Add New Car Model</text>

        }
    </h4>
</div>

@using (Ajax.BeginForm("SaveCarModel", "CarModelsControl", new AjaxOptions { UpdateTargetId = "divCarMakeModels", OnBegin = "PreSave", OnSuccess = "unloadModal('Color')" }, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(m => m.oCarModels.CarModelID)
    @Html.HiddenFor(m => m.oCarModels.LanguageID)

    <div class="modal-body">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="inputEmail3" style="width:90px;">Car Make</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.oCarModels.CarMakeID, Model.lstCarMakesItemsList, new { @class = "form-control", @placeholder = "Sort Order" })
            </div>
        </div>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="inputEmail3" style="width:90px;">Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.oCarModels.ModelName, new { @class = "form-control", @placeholder = "Name" })
                @Html.ValidationMessageFor(m => m.oCarModels.ModelName, "", new { @style = "color:orange;" })
            </div>
        </div>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="inputEmail3" style="width:90px;">Status</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.oCarModels.Status, Model.lstStatus, new { @class = "form-control", @placeholder = "Sort Order" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" id="btnSave" class="btn btn-info"><i class="fa fa-save"></i> Save</button>
    </div>
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
    $(document).ready(function () {
        $('.modal-dialog').css("width", "80%");
    });
</script>

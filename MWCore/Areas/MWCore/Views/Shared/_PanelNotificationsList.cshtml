@model MWCore.Areas.MWCore.Models.MWCoreModel
<a class="dropdown-toggle waves-effect waves-light" data-toggle="dropdown" href="#">
    <i class="icon-envelope"></i>
    @if (Model.lstTopPanelNotifications.Any(x => !x.IsRead))
    {
        <div class="notify"><span class="heartbit"></span><span class="point"></span></div>
    }
</a>
<ul class="dropdown-menu mailbox animated bounceInDown">

    <li>
        <div class="drop-title">You have @Model.lstTopPanelNotifications.Where(x => !x.IsRead).Count() new messages</div>
    </li>
    <li>
        <div class="message-center">
            @foreach (var notification in Model.lstTopPanelNotifications)
            {
                if (notification.IsRead)
                {
                    <a href="@Url.Action("NotificationDetails","PanelNotificationsControl",new {@NotificationID=notification.NotificationID })">
                        <div class="user-img"> <img src="@Url.Content("~/Areas/MWCore/assets/plugins/images/users/pawandeep.jpg")" alt="user" class="img-circle"> <span class="profile-status online pull-right"></span> </div>
                        <div class="mail-contnet">
                            <h5>@notification.Title</h5>
                            <span class="mail-desc">@notification.Message</span> <span class="time">@notification.CreationDate.ToString("HH:mm tt")</span>
                        </div>
                    </a>
                }
                else
                {
                    <a href="@Url.Action("NotificationDetails","PanelNotificationsControl",new {@NotificationID=notification.NotificationID })" style="background-color: antiquewhite;">
                        <div class="user-img"> <img src="@Url.Content("~/Areas/MWCore/assets/plugins/images/users/pawandeep.jpg")" alt="user" class="img-circle"> <span class="profile-status online pull-right"></span> </div>
                        <div class="mail-contnet">
                            <h5>@notification.Title</h5>
                            <span class="mail-desc">@notification.Message</span> <span class="time">@notification.CreationDate.ToString("HH:mm tt")</span>
                        </div>
                    </a>
                }
            }
        </div>
    </li>
    <li> <a class="text-center" href="@Url.Action("Index","PanelNotificationsControl")"> <strong>See all notifications</strong> <i class="fa fa-angle-right"></i> </a></li>
</ul>

